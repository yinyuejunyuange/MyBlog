<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.oyyj.blogservice.mapper.TypeTableMapper">


    <select id="findTypesByBlogId" resultType="org.oyyj.blogservice.pojo.TypeTable">
        SELECT
        *
        FROM type_table tt
        INNER JOIN type_blog tb ON tb.type_id = tt.id
        <where>
            <if test="blogId != null">
                tb.blog_id = #{blogId}
            </if>
        </where>
    </select>
</mapper>
